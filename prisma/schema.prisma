// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Rankings {
  id     Int    @id @default(autoincrement())
  grade  String
  points Int
}

model Participant {
  id                 Int               @id @default(autoincrement())
  grade              Int
  name               String
  seen               Boolean
  dressed            Boolean
  EventInformation   EventInformation? @relation(fields: [eventInformationId], references: [id])
  eventInformationId Int?
}

model EventInformation {
  id          Int           @id @default(autoincrement())
  type        String
  name        String
  displayName String
  complete    Boolean
  data        Participant[]
  points9     Int
  points10    Int
  points11    Int
  points12    Int
}
